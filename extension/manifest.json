{
    "manifest_version": 2,
    "name": "TOSleuth",
    "version": "1.0",
    "description": "Analyze website terms-of-service and privacy agreements with AI",
    "permissions": [
      "activeTab",
      "<all_urls>",
      "storage",
      "downloads",
      "http://127.0.0.1:8000/add_from_url"
    ],
    "icons": {
      "48": "icons/icon.jpg"
    },
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icons/icon.jpg",
      "default_title": "tosleuth",
      "default_popup": "html/popup.html"
    }
  }
