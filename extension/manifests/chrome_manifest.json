{
  "manifest_version": 3,
  "name": "ToSleuth",
  "version": "1.0",
  "description": "Analyze website terms and conditions with AI",
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "48": "padlock.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "side_panel": {
    "default_icon": "padlock.png",
    "default_title": "tosleuth",
    "default_path": "index.html"
  }
}
