{
  "manifest_version": 2,
  "name": "TOSleuth",
  "version": "1.0",
  "description": "Analyze website terms-of-service and privacy agreements with AI",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "http://127.0.0.1:8000/add_from_url"
  ],
  "icons": {
    "48": "padlock.png"
  },
  "background": {
    "scripts": ["js/browser-polyfill.js", "js/background.js"],
    "persistent": true
  },
  "sidebar_action": {
    "default_icon": "padlock.png",
    "default_title": "tosleuth",
    "default_panel": "index.html"

  }
}